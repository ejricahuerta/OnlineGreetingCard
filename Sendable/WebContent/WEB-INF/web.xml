<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	id="WebApp_ID" version="3.1">
	<display-name>Sendable</display-name>
	<servlet>
		<servlet-name>Category</servlet-name>
		<servlet-class>com.sendable.cards.CategoryServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Category</servlet-name>
		<url-pattern>/category.jsp</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>Cards</servlet-name>
		<servlet-class>com.sendable.cards.CardServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Cards</servlet-name>
		<url-pattern>/card.jsp</url-pattern>
		<url-pattern>/Cards/*</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>MyAccount</servlet-name>
		<servlet-class>com.sendable.useraccount.UserAccountServlet</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>MyAccount</servlet-name>
		<url-pattern>/MyAccount/*</url-pattern>
	</servlet-mapping>

	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
		<welcome-file>index.htm</welcome-file>
		<welcome-file>index.jsp</welcome-file>
		<welcome-file>default.html</welcome-file>
		<welcome-file>default.htm</welcome-file>
		<welcome-file>default.jsp</welcome-file>
	</welcome-file-list>
</web-app>